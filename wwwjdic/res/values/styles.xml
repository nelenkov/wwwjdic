<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="list_item_base">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dict_list_heading" parent="list_item_base">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dict_list_reading" parent="list_item_base">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dict_list_translation" parent="list_item_base">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="kanji_list_heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="kanji_list_reading">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="kanji_list_translation">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dict_detail_heading">
        <item name="android:textSize">@dimen/details_heading_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dict_detail_reading">
        <item name="android:textSize">@dimen/details_reading_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dict_detail_meaning">
        <item name="android:textSize">@dimen/details_meaning_size</item>
    </style>

    <style name="kanji_detail_heading">
        <item name="android:textSize">@dimen/kanji_detail_heading_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="kanji_detail_reading">
        <item name="android:textSize">@dimen/details_reading_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="radical_glyph">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/radical_glyph_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="kod_loading">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/semi_white</item>
    </style>
    
     <style name="kod_loading_transparent">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/semi_black</item>
    </style>

    <style name="listViewActivatedStyle" />

    <style name="hkr_toolbar_button">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:drawable/btn_default_small</item>
        <item name="android:textSize">@dimen/hkr_toolbar_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="hkr_toolbar_checbox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/hkr_toolbar_text_size</item>
    </style>

    <style name="krad_chart_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:drawable/btn_default_small</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="small_button">
        <item name="android:background">@android:drawable/btn_default_small</item>
    </style>

    <style name="details_separator">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/grey</item>
        <item name="android:textSize">@dimen/details_separator_size</item>
        <item name="android:paddingLeft">3dp</item>
    </style>

    <style name="compounds_link">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColorLink">@color/white</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/kanji_compound_link_size</item>
    </style>

    <style name="ocr_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:textSize">32sp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="action_bar_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat"/>
    <style name="Theme.WwwjdicAb" parent="Theme.AppCompat">
        <item name="actionBarStyle">@style/Widget.WwwjdicAb</item>
        <item name="actionModeStyle">@style/Widget.WwwjdicActionMode</item>
        <item name="actionBarTabStyle">@style/Widget.WwwjdicAbTabView</item>
    </style>

    <style name="Widget.WwwjdicAb" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@drawable/action_bar_bg</item>
        <item name="backgroundSplit">@drawable/action_bar_bg</item>
        <item name="icon">@drawable/ic_action_home</item>
        <item name="titleTextStyle">@style/action_bar_title</item>
    </style>

    <style name="Widget.WwwjdicAbTabView" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/action_bar_tab_bg</item>
    </style>

    <style name="Theme.WwwjdicAbMain" parent="Theme.AppCompat">
        <item name="actionBarStyle">@style/Widget.WwwjdicAbMain</item>
        <item name="actionModeStyle">@style/Widget.WwwjdicActionMode</item>
        <item name="actionBarTabStyle">@style/Widget.WwwjdicAbTabView</item>
        <item name="actionBarTabTextStyle">@style/Widget.WwwjdicTabText</item>
        <item name="actionMenuTextAppearance">@style/Widget.WwwjdicMenu</item>
    </style>

    <style name="Theme.WwwjdicAbTabbed" parent="Theme.AppCompat.NoActionBar">
        <item name="actionBarStyle">@style/Widget.WwwjdicAbTabbed</item>
        <item name="actionModeStyle">@style/Widget.WwwjdicActionMode</item>
        <item name="actionBarTabStyle">@style/Widget.WwwjdicAbTabView</item>
        <item name="actionBarTabTextStyle">@style/Widget.WwwjdicTabText</item>
        <item name="actionMenuTextAppearance">@style/Widget.WwwjdicMenu</item>
        <item name="colorPrimary">@color/ab_blue</item>
        <item name="colorPrimaryDark">@color/ab_blue_dark</item>
    </style>

    <style name="Widget.WwwjdicAbTabbed" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="displayOptions"></item>
        <item name="background">@null</item>
        <item name="backgroundSplit">@drawable/action_bar_bg</item>
        <item name="icon">@drawable/ic_action_home</item>
        <item name="titleTextStyle">@style/action_bar_title</item>
        <item name="colorPrimary">@color/ab_blue</item>
        <item name="colorPrimaryDark">@color/ab_blue_dark</item>
    </style>
    
    <style name="Widget.WwwjdicTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textSize">@dimen/ab_tab_menu_text_size</item>
    </style>

    <!--style name="Widget.WwwjdicMenu" parent="android:style/TextAppearance.Widget.ActionBar.Menu"-->
    <style name="Widget.WwwjdicMenu" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/ab_tab_menu_text_size</item>
    </style>

    <style name="Widget.WwwjdicAbMain" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@drawable/action_bar_bg</item>
        <item name="backgroundSplit">@drawable/action_bar_bg</item>
        <item name="icon">@null</item>
        <item name="titleTextStyle">@style/action_bar_title</item>
    </style>

    <style name="Widget.WwwjdicActionMode" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="background">@drawable/action_bar_bg</item>
        <item name="backgroundSplit">@drawable/action_bar_bg</item>
    </style>

    <style name="WwwjdicAbTrans" parent="Theme.AppCompat.NoActionBar" />

    <style name="search_input">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
    </style>

    <style name="search_option">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/search_option_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="search_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

</resources>