<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:gravity="center" 
    android:measureAllChildren="true"
    android:background="@drawable/proba">
    <TextView android:id="@+id/kod_message_text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="@color/yellow" 
        android:gravity="center"
        android:text="@string/widget_loading"
        style="@style/kod_loading">
    </TextView> 
    <RelativeLayout android:id="@+id/widget"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:background="@drawable/appwidget_button"
        android:clickable="true" 
        android:focusable="true"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView android:id="@+id/kod_date_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:textColor="@color/yellow" 
            android:textStyle="bold"
            android:textSize="9sp"
            android:includeFontPadding="false"
            android:paddingTop="3dip"
            android:layout_alignParentTop="true"/> 
        <TextView android:id="@+id/kod_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white" 
            android:textStyle="bold"
            android:textSize="28sp" 
            android:text="E"
            android:includeFontPadding="false"
            android:layout_below="@id/kod_date_text"/>
        <TextView android:id="@+id/kod_footer_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow" 
            android:gravity="bottom|center"
            android:textStyle="bold"
            android:textSize="9sp"
            android:text="@string/kanji_of_the_day_jp"
            android:includeFontPadding="false"
            android:paddingBottom="3dip" 
            android:layout_alignParentBottom="true"/>    
    </RelativeLayout>
</FrameLayout>
